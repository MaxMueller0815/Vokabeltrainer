<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent3Dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:textColor">@color/colorAccent3Dark</item>
        <item name="android:navigationBarColor">@color/colorAccent3Dark</item>
        <item name="actionMenuTextColor">@color/colorAccent3Dark</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonCircleTheme">
        <item name="android:background">@drawable/button_add_circle</item>
    </style>

</resources>
