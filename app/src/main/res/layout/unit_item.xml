<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginRight="40dp"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="40dp"
    android:id="@+id/card_unit"
    android:layout_marginBottom="40dp"
    android:elevation="24dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="24dp"
    app:cardCornerRadius="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_unit_number"
            android:paddingTop="32dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_unit_title"
            android:textSize="20sp"
            android:layout_below="@+id/tv_unit_number"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="32dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_unit_vocabs"
            android:layout_below="@+id/tv_unit_title"
            android:layout_above="@+id/btn_unit_learn"
            android:background="#FAFAFA" />

        <Button
            android:text="Learn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_unit_learn"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="14dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
